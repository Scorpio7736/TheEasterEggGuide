<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CUSTOM_ITEM_background_dark"
    tools:context=".EasterEgg_Reveal_Page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/character_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="fitStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/full_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/CUSTOM_ITEM_text_primary_light"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/character_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/affiliation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/CUSTOM_ITEM_text_secondary_light"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/full_name_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/first_appearance_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="@color/CUSTOM_ITEM_text_secondary_light"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/affiliation_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Biography Section -->
        <TextView
            android:id="@+id/biography_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Biography"
            android:textColor="@color/CUSTOM_ITEM_highlight_light"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/first_appearance_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/biography_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/CUSTOM_ITEM_text_primary_light"
            app:layout_constraintTop_toBottomOf="@id/biography_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Personality Traits Section -->
        <TextView
            android:id="@+id/traits_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Personality Traits"
            android:textColor="@color/CUSTOM_ITEM_highlight_light"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/biography_content"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/traits_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/CUSTOM_ITEM_text_primary_light"
            app:layout_constraintTop_toBottomOf="@id/traits_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Notable Quotes Section -->
        <TextView
            android:id="@+id/quotes_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Notable Quotes"
            android:textColor="@color/CUSTOM_ITEM_highlight_light"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/traits_content"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/quotes_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/CUSTOM_ITEM_text_primary_light"
            app:layout_constraintTop_toBottomOf="@id/quotes_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Role in Story Section -->
        <TextView
            android:id="@+id/role_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Role in the Story"
            android:textColor="@color/CUSTOM_ITEM_highlight_light"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/quotes_content"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/role_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/CUSTOM_ITEM_text_primary_light"
            app:layout_constraintTop_toBottomOf="@id/role_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>